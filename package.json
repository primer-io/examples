{
  "name": "primer-playground",
  "version": "0.0.0-semantic-release",
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "packages/*",
    "docs",
    "examples/*"
  ],
  "nohoist": [
    "**/react",
    "**/react-dom",
    "**/typescript",
    "**/@types/react",
    "**/@types/react-dom"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "lint:es": "turbo run lint",
    "lint:ts": "turbo run check-types",
    "format": "prettier . --write",
    "lint:format": "prettier . --check"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "2.5.3"
  }
}
